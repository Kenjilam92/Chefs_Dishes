@{
    ViewData["Title"] = "Chef";
}

<div class="container">
    <div class="col">
        <div class="d-flex flex-column align-items-center mb-3 border-bottom border-dark">
            <a class="align-self-end" href="/new">Add a Chef</a>
            <h1> Chefs | <a href="/dishes">Dishes</a> </h1>
            <p>Check out our roster of Chefs</p>
        </div>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>#Dish</th>
                </tr>
            </thead>
            <tbody> 
                @foreach(var c in ViewBag.Chefs)
                {
                <tr>
                    <td>@c.FirstName @c.LastName</td>
                    @{
                        int Age = DateTime.Now.Year - c.Birthday.Year;
                        if(c.Birthday.DayOfYear > DateTime.Now.DayOfYear)
                        {
                            Age= Age -1;
                        }
                    }
                    <td>@Age</td>
                    <td>@c.Dishes.Count</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


