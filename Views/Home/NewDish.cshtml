@{
    ViewData["Title"] = "Add a Chef";
}
@model Dish
<div class="container">
    <div class="col fustify-content-center">
        <div class="d-flex flex-column align-items-center" >
            <h1> Add a new Dish </h1>
            <a class="align-self-start" href="/dishes">Home</a>
        </div>
        <form action="/dishes/add" class="col mt-3" method="post">
            <div class="row">
                <div class="col-5 d-flex flex-column form-group">
                    <label asp-for="DishName"></label>
                    <span asp-validation-for="DishName" class="text-danger"></span>
                    <input asp-for="DishName" class= "form-control">
                    <label asp-for="Calories"></label>
                    <span asp-validation-for="Calories" class="text-danger"></span>
                    <input asp-for="Calories" class= "form-control" >
                </div>
                <div class="col-5 d-flex flex-column form-group">
                    <label asp-for="ChefId"></label>
                    <select asp-for="ChefId" class= "form-control">
                        @foreach (var c in ViewBag.Chefs)
                        {
                            <option value="@c.ChefId">@c.FirstName @c.LastName</option>
                        }
                    </select>
                </div>
                <div class="col-2 d-flex flex-column form-group">
                    <label asp-for="Tastiness"></label>
                    <select asp-for="Tastiness" class= "form-control">
                        <option value=1>1</option>
                        <option value=2>2</option>
                        <option value=3>3</option>
                        <option value=4>4</option>
                        <option value=5>5</option>
                    </select>
                    <span asp-validation-for="Tastiness" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-10 form-group">
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <textarea asp-for="Description" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <div class="col-2">
                    <button class="btn btn-primary mt-4" style="width: fit-content;" type="submit">Add Dish</button>
                </div>
            </div>
        </form>
    </div>
</div>


